@model eKitap.Models.Student
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Sil";
    ViewData["Page"] = "students";

    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3>Silmek istediğinizden emin misiniz ?</h3>
<div>
    <h4>Öğrenci</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           İsim
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            T.C No
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TcId)
        </dd>
        <dt class = "col-sm-2">
            Şifre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class = "col-sm-2">
           Sınıf
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClassRoom.Id)
        </dd>
        <dt class = "col-sm-2">
            Onay Durumu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApproveStatus)
        </dd>
        <dt class = "col-sm-2">
            Oluşturma Tarihi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        <dt class = "col-sm-2">
            Son Düzenleme Tarihi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastUpdateDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a class="btn btn-info" asp-action="Index"><i class="fas fa-backward"></i></a>
    </form>
</div>
