@model eKitap.Models.Book
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Sil";
    ViewData["Page"] = "books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Silmek istediğinizden emin misiniz ?</h3>
<div>
    <h4>Kitap</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            İsim
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Sınıf
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClassRoom.Id)
        </dd>
        <dt class="col-sm-2">
            İndirilme Sayısı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DownlaodCount)
        </dd>
        <dt class="col-sm-2">
            Dosya İsmi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PdfName)
        </dd>
        <dt class="col-sm-2">
            Oluşturulma Tarihi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        <dt class="col-sm-2">
            Son Düzenleme Tarihi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastUpdateDate)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a class="btn btn-info" asp-action="Index"><i class="fas fa-backward"></i></a>
    </form>
</div>
