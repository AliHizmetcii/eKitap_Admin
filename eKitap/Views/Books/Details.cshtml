@model eKitap.Models.BookStudentConnection
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Detaylar";
    ViewData["Page"] = "books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <thead>
    <tr>
        <th>
           Öğrenci İsmi
        </th>
        <th>
            Kitap İsmi
        </th>
        <th>
            Sayfa Numarası
        </th>
        <th>
            Öğrenci Yorumu
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Comments)
    {
        <tr>
            <td>
            @Model.Student.Name
            </td>
            <td>
            @Model.Book.Name
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PageNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
        </tr>
    }
    </tbody>
</table>
<a class="btn btn-info" asp-action="Index"><i class="fas fa-backward"></i></a>